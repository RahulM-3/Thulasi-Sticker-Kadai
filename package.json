{
  "name": "thulasi-sticker-kadai",
  "author": "Rahul M",
  "private": true,
  "version": "0.0.1",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:web": "vite",
    "dev:app": "vite build && cmd.exe /c winElectron\\\\node_modules\\\\\\.bin\\\\\\electron.cmd .",
    "dev:app:linux": "vite build && electron .",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "neko-virumaandi",
    "productName": "Thulasi Sticker Kadai",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "icon": "public/icon.png",
      "target": "deb"
    },
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis",
      "signAndEditExecutable": true
    }
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.0.1",
    "firebase-admin": "^13.4.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "vite": "^7.0.0"
  }
}
